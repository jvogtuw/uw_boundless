name = UW Boundless
description = A Bootstrap 7.x-3.x Sub-theme. This theme can serve as a base-theme for site-specific UW sub-themes. It uses local bootstrap source files as described in "Method 1" of the Bootstrap Theming Guide: https://www.drupal.org/node/1978010
core = 7.x
base theme = bootstrap
php = 5.3.0


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[search]         = 'Search'
regions[navigation]     = 'Navigation'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css


;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'bootstrap/js/affix.js'
scripts[] = 'bootstrap/js/alert.js'
scripts[] = 'bootstrap/js/button.js'
scripts[] = 'bootstrap/js/carousel.js'
scripts[] = 'bootstrap/js/collapse.js'
scripts[] = 'bootstrap/js/dropdown.js'
scripts[] = 'bootstrap/js/modal.js'
scripts[] = 'bootstrap/js/tooltip.js'
scripts[] = 'bootstrap/js/popover.js'
scripts[] = 'bootstrap/js/scrollspy.js'
scripts[] = 'bootstrap/js/tab.js'
scripts[] = 'bootstrap/js/transition.js'

; Disable the CDN provider so compiled source files can be used.
settings[bootstrap_cdn] = ''


;;;;;;;;;;;;;;;;;;;;;;
;; UW utility scripts
;;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'js/function.bind.js'
scripts[] = 'js/uw.mobile-menu.js'
scripts[] = 'js/uw.mobile-sidebar-menu.js'
scripts[] = 'js/uw.quicklinks.js'
scripts[] = 'js/uw.search.js'
scripts[] = 'js/dropdowns.js'
scripts[] = 'js/radios.js'


;;;;;;;;;;;;;;;;;;;;;;
;; theme script
;;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'js/script.js'


;;;;;;;;;;;;;;;;;;;;;;
;; theme settings
;;;;;;;;;;;;;;;;;;;;;;

settings[uw_boundless_hero_image_front_default_path] = '//www.washington.edu/brand/files/2014/09/w.jpg'
settings[uw_boundless_hero_image_front_default] = 1
settings[uw_boundless_hero_image_front_path] = ''
settings[uw_boundless_hero_image_default_path] = '//www.washington.edu/brand/files/2014/09/w3.jpg'
settings[uw_boundless_hero_image_default] = 1
settings[uw_boundless_hero_image_path] = ''
settings[uw_boundless_front_page_title_color] = '#ffffff'
settings[uw_boundless_front_page_slant_color] = '#ffffff'
settings[uw_boundless_front_page_slogan_color] = '#ffffff'
settings[uw_boundless_text_shadow_black] = '2px 2px 2px rgba(0, 0, 0, 0.5)'
settings[uw_boundless_text_shadow_white] = '2px 2px 2px rgba(255, 255, 255, 0.5)'
settings[uw_boundless_sidebar_menu_visibility] = 1
